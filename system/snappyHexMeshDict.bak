FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      snappyHexMeshDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

castellatedMesh true;
snap            true;
addLayers       true;

geometry
{
    f1car.stl
    {
        type triSurfaceMesh;
        name f1car;
    }
}

castellatedMeshControls
{
    maxLocalCells 100000;
    maxGlobalCells 2000000;
    minRefinementCells 0;
    nCellsBetweenLevels 3;
    resolveFeatureAngle 30;
    refinementSurfaces
    {
        f1Car
        {
            level (5 6);
            patchInfo
            {
                type wall;
            }
        }
    }
    refinementRegions
    {
        f1Car
        {
            mode distance;
            levels ((0.1 5) (0.5 3));
        }
    }
    locationInMesh (0.1 0.1 0.1);
    allowFreeStandingZoneFaces true;
}

snapControls
{
    nSmoothPatch 3;
    tolerance 2.0;
    nSolveIter 30;
    nRelaxIter 5;
    nFeatureSnapIter 10;
    implicitFeatureSnap false;
    explicitFeatureSnap true;
    multiRegionFeatureSnap false;
}

addLayersControls
{
    relativeSizes true;
    layers
    {
        f1Car
        {
            nSurfaceLayers 10;
            expansionRatio 1.2;
            firstLayerThickness 0.0001;
        }
    }
    expansionRatio 1.2;
    finalLayerThickness 0.0001;
    minThickness 0.00001;
    nGrow 0;
    featureAngle 30;
    nSmoothSurfaceNormals 1;
    nSmoothNormals 3;
    nSmoothThickness 10;
    maxFaceThicknessRatio 0.5;
    maxThicknessToMedialRatio 0.3;
    minMedialAxisAngle 90;
    nBufferCellsNoExtrude 0;
    nLayerIter 50;
}

meshQualityControls
{
    maxNonOrtho 65;
    maxBoundarySkewness 20;
    maxInternalSkewness 4;
    maxConcave 80;
    minVol 1e-13;
    minTetQuality 1e-15;
    minArea -1;
    minTwist 0.02;
    minDeterminant 0.001;
    minFaceWeight 0.05;
    minVolRatio 0.01;
    minTriangleTwist -1;
}

mergeTolerance 1e-6;
// ************************************************************************* //
